{
  "name": "Deck Compatibility Display",
  "version": "1.0.0",
  "manifest_version": 2,
  "content_scripts": [
    {
      "matches": ["https://store.steampowered.com/app/*"],
      "js": ["content.js"]
    }
  ],
  "browser_action": {
    "default_icon": {
      "48": "icon.png"
    },
    "default_title": "Deck compatibility status",
    "default_popup": "popups/popup.html"
  },
  "background": {
    "scripts": ["background.js"]
  }
}
